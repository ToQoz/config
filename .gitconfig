#       pushInsteadof = github.com.team/team/
# [url "git@github.com.team:team/"]
#       insteadOf     = "https://github.com/team/"
#       pushInsteadOf = "https://github.com/team/"

        path = ~/private/.gitconfig
[ghq]
	root = ~/repos
