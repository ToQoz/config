{
  "workbench.colorTheme": "Vitesse Black",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.iconTheme": "file-icons",
  "workbench.colorCustomizations": {
    "errorLens.warningForeground": "#a0800b",
    "errorLens.warningBackground": "#0d0d0d",
    "errorLens.errorForeground": "#b35454",
    "errorLens.errorBackground": "#0d0d0d"
  },
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "window.newWindowDimensions": "inherit",
  "window.openFoldersInNewWindow": "on",
  // Editor
  "editor.fontFamily": "Input Mono, Fira Code, monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.tabSize": 2,
  "editor.lineNumbers": "interval",
  "editor.inlineSuggest.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.stickyScroll.enabled": true,
  "editor.hover.sticky": true,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // Files
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.heex": "phoenix-heex"
  },
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  // JavaScript / TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "prettier.enable": false,
  "prettier.printWidth": 200,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // Go
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  // Copilot
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  },
  // Git Lens
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  // Error Lens
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],
  // Code Spell Checker
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "cSpell.ignorePaths": [
    "settings.json",
    "extensions.json"
  ],
  // Draw.io
  "hediet.vscode-drawio.theme": "Kennedy",
  // YAML (redhat.vscode-yaml)
  "redhat.telemetry.enabled": false,
}
